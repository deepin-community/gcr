Uploaders: @GNOME_TEAM@
Build-Depends: dbus <!nocheck>,
               debhelper-compat (= 13),
               dh-sequence-gir,
               dh-sequence-gnome,
               docbook-xml,
               gnupg,
               gtk-doc-tools (>= 1.9),
               libdbus-1-dev (>= 1.0),
               libgcrypt20-dev (>= 1.4.5),
               libgirepository1.0-dev (>= 1.34),
